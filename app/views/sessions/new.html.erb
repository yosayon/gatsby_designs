<div class="new-form-container">
 <%= form_for @user, url: login_path do |f| %>
 <ul>
  <% if flash[:message] %>
  <h3 id="flash-message"><%= flash[:message] %></h3>
  <% end %>
  
  <li>
   <h3>SIGN IN</h3>
  </li>
  
 <div id="error_explanation">
  <% if @user.errors.any? %>
   <h2>There were errors</h2>
 </div>
  <% end %>
  
<div class="field <%= ' field_with_errors' if @user.errors[:email].any? %>"> 
   <%= label_tag :email %>
 <li>
   <%= text_field_tag :email %>
 </li>
 <h5><%= @user.errors[:email][0] %></h5>
</div>

<div class="field <%= ' field_with_errors' if @user.errors[:password].any? %>">
   <%= label_tag :password %>
  <li>
    <%= password_field_tag :password %>
  </li>
  <h5><%= @user.errors[:password][0] %></h5>
</div>
  
 <li>
   <%= f.submit "SIGNIN" %>
 </li>
 
 <li>
   <p><%= link_to "SIGNUP", signup_path %></p>
   <p> or </p>
 </li>
 
 <li>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
 </li>
 
 </ul>
<% end %>

</div>