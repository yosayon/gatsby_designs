<div class="orders-container">
 <h3>Order# <%= @order.id %></h3>

  <% @order.line_items.each do |line_item| %>
     <div class="image-shrunk"><img src=<%= line_item.product.picture %>>
      <div class="product-name"><%= line_item.product.name %></div>
      <div class="product-price"><%= line_item.product.price.floor %></div>
      <div class="quantity">Quantity:<%= line_item.quantity %></div>
     </div>
     
 <% end %>
 <p>Total: <%= @order.total %></p>
 <p>This order was processed on <%= @order.updated_at %></p>
 <p><%= link_to "View all orders", user_orders_path(current_user)%></p>
 
</div>