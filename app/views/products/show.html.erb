<div class="products-container">
  <div class="product">
   <div class="product-content">
     <div class="image-enlarged"><a href=<%= product_path(@product) %>><img src="/products/<%= @product.slugify %>.jpg"></a></div>
     <div class="name"><%= @product.name %></div>
     <div class="price"><%= @product.price.floor %></div>
     <div class="add-cart"><%= link_to "Add to Cart", "#" %></div>
   </div>
  </div>
</div>